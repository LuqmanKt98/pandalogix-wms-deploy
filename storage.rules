rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check file size (max 10MB)
    function isValidFileSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }
    
    // Helper function to check allowed content types
    function isValidContentType() {
      return request.resource.contentType.matches('image/.*') 
          || request.resource.contentType.matches('application/pdf')
          || request.resource.contentType.matches('application/msword')
          || request.resource.contentType.matches('application/vnd.openxmlformats-officedocument.*');
    }

    // Helper function to check if user is admin or superAdmin via Firestore
    function isWritableRole() {
      return isAuthenticated() 
             && firestore.exists(/databases/(default)/documents/users/$(request.auth.uid))
             && (firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin' 
                 || firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'superAdmin');
    }
    
    // Shipment attachments - BOL uploads, labels, pickup photos
    match /shipments/{shipmentId}/{allPaths=**} {
      // All authenticated users can read shipment files
      allow read: if isAuthenticated();
      
      // Only admins/superAdmins can upload/update
      allow write: if isWritableRole() 
                   && isValidFileSize()
                   && isValidContentType();
      
      // Only admins/superAdmins can delete
      allow delete: if isWritableRole();
    }
    
    // Goods Received attachments - receiving photos, documentation
    match /goodsReceived/{receivedId}/{allPaths=**} {
      // All authenticated users can read goods received files
      allow read: if isAuthenticated();
      
      // Only admins/superAdmins can upload/update
      allow write: if isWritableRole() 
                   && isValidFileSize()
                   && isValidContentType();
      
      // Only admins/superAdmins can delete
      allow delete: if isWritableRole();
    }
    
    // Inventory attachments - product photos
    match /inventory/{inventoryId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isWritableRole() 
                   && isValidFileSize()
                   && isValidContentType();
      allow delete: if isWritableRole();
    }
    
    // Client attachments - contracts, logos
    match /clients/{clientId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isWritableRole() 
                   && isValidFileSize()
                   && isValidContentType();
      allow delete: if isWritableRole();
    }
    
    // User profile images
    match /users/{userId}/{allPaths=**} {
      // Users can read their own files, admins/superAdmins can read all (implied by isAuthenticated here, strictly speaking should be fine)
      allow read: if isAuthenticated();
      
      // Users can only write to their own folder, or Admins/SuperAdmins can manage
      allow write: if isAuthenticated() 
                   && (request.auth.uid == userId || isWritableRole())
                   && isValidFileSize()
                   && request.resource.contentType.matches('image/.*');
      
      // Users can delete their own files, or Admins/SuperAdmins can manage
      allow delete: if isAuthenticated() && (request.auth.uid == userId || isWritableRole());
    }
    
    // Temporary uploads folder for processing
    match /temp/{userId}/{allPaths=**} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
      allow delete: if isAuthenticated() && request.auth.uid == userId;
    }
  }
}

